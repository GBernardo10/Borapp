<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="15dp"
    tools:context=".CadastroActivity">

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Bora"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Qual seu tipo de acesso?"
        android:textColor="@color/cor_branca"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo"
        android:layout_marginTop="150dp"
        android:id="@+id/tipo_acesso"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@color/cor_preta"
        app:layout_constraintTop_toBottomOf="@+id/tipo_acesso"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="Pessoa fÃ­sica"
        android:textSize="20dp"
        android:textColor="@color/cor_branca"
        app:layout_editor_absoluteX="20dp"
        android:id="@+id/btPf"
    />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@color/cor_laranja"
        app:layout_constraintTop_toBottomOf="@+id/tipo_acesso"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="Pessoa juridica"
        android:textSize="20dp"
        android:textColor="@color/cor_branca"
        app:layout_editor_absoluteX="195dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>