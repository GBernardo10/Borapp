<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_roxo"
    android:padding="30dp"
    tools:context=".CadastroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/icone_logo"
            android:src="@drawable/bora_branco" />

        <TextView
            android:id="@+id/tvTipoAcesso"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/logo"
            android:text="@string/click_cadastrar"
            android:textColor="@color/cor_branco"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/btPf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTipoAcesso"
            android:background="@color/cor_preto"
            android:textAlignment="center"
            android:layout_marginStart="35dp"
            android:layout_marginTop="50dp"
            android:text="@string/pessoa_fisica"
            android:textSize="25dp"
            android:textColor="@color/cor_branco"
            android:onClick="IrCadastrarPf"/>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>