<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_roxo"
    tools:context=".CadastroPfActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/icone_logo"
            android:src="@drawable/bora_branco" />

        <ImageView
            android:id="@+id/ivUsuario"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/user"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp"
            app:layout_editor_absoluteX="160dp"
            />
        <TextView
            android:id="@+id/tvFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inserir_foto_perfil"
            android:layout_below="@+id/ivUsuario"
            android:layout_centerHorizontal="true"
            android:textSize="28dp"
            android:textColor="@color/cor_branco"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:hint="@string/email_ou_login"
            android:background="@color/cor_branco"
            android:textSize="45dp"
            android:layout_below="@+id/tvFoto"
            android:layout_marginTop="40dp"
            app:layout_editor_absoluteX="10dp"/>

        <EditText
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:hint="@string/seu_whatsapp"
            android:background="@color/cor_branco"
            android:textSize="50dp"
            android:layout_below="@+id/etEmail"
            android:layout_marginTop="10dp"
            app:layout_editor_absoluteX="10dp"
            android:id="@+id/etWhats"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:hint="@string/digite_cpf"
            android:background="@color/cor_branco"
            android:textSize="50dp"
            android:layout_below="@+id/etWhats"
            android:layout_marginTop="10dp"
            app:layout_editor_absoluteX="10dp"
            android:id="@+id/etCnpj"/>

        <EditText
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:hint="@string/nome_usuario"
            android:background="@color/cor_branco"
            android:textSize="43dp"
            android:layout_below="@+id/etCnpj"
            android:layout_marginTop="10dp"
            app:layout_editor_absoluteX="10dp"
            android:id="@+id/etLogin"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLogin"
            android:textAlignment="center"
            android:text="@string/cadastrar"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"/>
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>