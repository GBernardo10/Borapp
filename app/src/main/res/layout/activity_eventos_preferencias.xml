<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#320236"
    tools:context=".EventosPreferencias">

    <RelativeLayout
        android:id="@+id/meusRoles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/menu"
            android:layout_marginStart="350dp"
            />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/icone_logo"
            android:src="@drawable/bora_branco"></ImageView>
        <EditText
            android:id="@+id/searchEventos"
            android:labelFor="@id/label_login"
            android:drawableLeft="@drawable/ic_search"
            android:drawableTint="#534848"
            android:hint="@string/encontreSeuRole"
            android:layout_width="390dp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/logo"
            android:layout_height="55dp"
            android:paddingStarwrap_contentt="20dp"
            android:layout_marginStart="10dp"
            android:paddingEnd="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_bar"
            android:inputType="text">
        </EditText>
        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_below="@id/searchEventos"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/preferencias"
            android:id="@+id/labelRoles"
            >
        </TextView>

        <Button
            android:id="@+id/evento"
            android:layout_width="390dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="90dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:background="@drawable/view_evento"
            android:layout_below="@id/labelRoles"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ball"
            android:layout_marginTop="10dp"
            android:layout_marginStart="300dp"
            android:translationZ="2dp"
            android:layout_below="@id/labelRoles"/>

        <TextView
            android:id="@+id/diaEvento"
            android:translationZ="@dimen/cardview_default_radius"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_below="@id/labelRoles"
            android:text="Sábado ás 13h"
            android:textColor="#2C1551"
            />

        <TextView
            android:id="@+id/dataEvento"
            android:translationZ="@dimen/cardview_default_radius"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginStart="320dp"
            android:layout_below="@id/labelRoles"
            android:text="12/06"
            android:textColor="#EF280E"
            />

        <TextView
            android:id="@+id/nomeEvento"
            android:translationZ="@dimen/cardview_default_radius"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_below="@id/labelRoles"
            android:text="Fute do Bolivinha"
            android:textColor="#EF280E"
            />

        <ImageView
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:translationZ="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_height="30dp"
            android:layout_below="@id/nomeEvento"
            android:src="@drawable/car"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="2dp"
            android:layout_below="@id/nomeEvento"
            android:layout_toRightOf="@id/car"
            android:layout_marginTop="9dp"
            android:text="1h"
            android:textSize="20dp"
            android:textColor="#757171"/>


        <ImageView
            android:id="@+id/bus"
            android:layout_width="wrap_content"
            android:translationZ="2dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeEvento"
            android:layout_toRightOf="@id/car"
            android:src="@drawable/bus"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="2dp"
            android:layout_below="@id/nomeEvento"
            android:layout_toRightOf="@id/bus"
            android:layout_marginTop="9dp"
            android:text="2h"
            android:textSize="20dp"
            android:textColor="#757171"/>

        <ImageView
            android:id="@+id/localizacao"
            android:layout_width="wrap_content"
            android:translationZ="2dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeEvento"
            android:layout_toRightOf="@id/bus"
            android:src="@drawable/location"
            />

        <TextView
            android:id="@+id/cidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:translationZ="2dp"
            android:layout_below="@id/nomeEvento"
            android:layout_toRightOf="@id/localizacao"
            android:text="São Paulo,"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:translationZ="2dp"
            android:layout_below="@id/cidade"
            android:layout_toRightOf="@id/localizacao"
            android:text="Vila invernada"
            android:textColor="#000"
            android:textStyle="bold"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>