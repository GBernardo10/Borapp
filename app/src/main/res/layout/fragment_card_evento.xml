<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:showIn="@layout/activity_home"
    tools:context=".CardEvent">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:text="Sábado ás 13h" />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_date"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:text="Fute do bolivinha" />

            <TextView
                android:id="@+id/dataEvento"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:textColor="#EF280E"
                android:textSize="25sp"
                android:textStyle="bold"
                android:translationZ="@dimen/cardview_default_radius"
                tools:text="12/06" />

            <ImageView
                android:id="@+id/img_card_evento"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ball"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/car"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/card_title"
                android:background="@drawable/car"
                android:contentDescription="TODO"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/car_travel_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"
                android:layout_toEndOf="@id/car"
                android:textColor="#757171"
                android:textSize="20sp"
                android:translationZ="2dp"
                tools:text="1h" />

            <ImageView
                android:id="@+id/bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"
                android:layout_alignBottom="@id/car"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/car_travel_time"
                android:contentDescription="TODO"
                android:src="@drawable/bus"
                android:translationZ="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/bus"
                android:textColor="#757171"
                android:textSize="20sp"
                android:translationZ="2dp"
                tools:text="2h" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>