<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#320236"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/logo"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo"
            android:contentDescription="@string/icone_logo">
        </ImageView>

        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_above="@id/login"
            android:layout_marginBottom="10dp"
            android:text="@string/login"
            android:id="@+id/label_login"
            >
        </TextView>

        <EditText
            android:id="@+id/login"
            android:labelFor="@id/label_login"
            android:hint="@string/e_mail_ou_apelido"
            android:layout_width="339dp"
            android:textColor="#000"
            android:layout_height="55dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_centerVertical="true"
            android:background="#fff"
            android:autofillHints=""
            android:inputType="text">
        </EditText>


        <TextView
            android:id="@+id/label_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/senha"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginBottom="-40dp"
            android:text="@string/senha"
            android:textColor="#fff">

        </TextView>

        <EditText
            android:id="@+id/senha"
            android:hint="@string/senha"
            android:layout_width="339dp"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:paddingStart="20dp"
            android:labelFor="@id/label_senha"
            android:paddingEnd="20dp"
            android:layout_below="@id/login"
            android:background="#fff">
        </EditText>
        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="ENTRAR"
            android:textSize="20dp"
            android:background="#00BEFF"
            android:layout_below="@id/senha"
            android:layout_marginTop="20dp"
            >
        </Button>
        <TextView
            android:id="@+id/esqueciSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esqueci_minha_senha"
            android:textColor="#00BEFF"
            android:layout_below="@id/btnEntrar">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cadastra_se"
            android:textColor="#00BEFF"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@id/esqueciSenha"
            android:layout_below="@id/btnEntrar">
        </TextView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>