<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#320236"
    android:padding="15dp"
    tools:context=".DetalheEventoActivity">

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Bora"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/vCirculo"
        android:layout_width="92dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo" />

    <TextView
        android:id="@+id/tvTituloEvento"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Futebas do Bolivia"
        android:textColor="@color/cor_azul"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/vCirculo"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo" />

    <TextView
        android:id="@+id/tvTituloOrganizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/organizador"
        android:textColor="@color/cor_branca"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/vCirculo"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloEvento" />
    <TextView
        android:id="@+id/tvOrganizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boliva123"
        android:textColor="@color/cor_branca"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/tvTituloOrganizador"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloEvento" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivEstrelaUm"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/star_yellow"
        app:layout_constraintLeft_toRightOf="@id/vCirculo"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloOrganizador"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivEstrelaDois"
        android:background="@drawable/star_yellow"
        app:layout_constraintLeft_toRightOf="@id/ivEstrelaUm"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloOrganizador"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivEstrelaTres"
        android:background="@drawable/star_yellow"
        app:layout_constraintLeft_toRightOf="@id/ivEstrelaDois"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloOrganizador"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivEstrelaQuatro"
        android:background="@drawable/star_yellow"
        app:layout_constraintLeft_toRightOf="@id/ivEstrelaTres"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloOrganizador"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivEstrelaCinco"
        android:background="@drawable/star_black"
        app:layout_constraintLeft_toRightOf="@id/ivEstrelaQuatro"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloOrganizador"
        />

    <TextView
        android:id="@+id/tvEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Rua Elite dos bravos, 53 - Vila Invernada - SP"
        android:textAlignment="center"
        android:textColor="@color/cor_azul"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/vCirculo" />

    <TextView
        android:id="@+id/tvValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 20,00"
        android:textColor="@color/cor_verde"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvEndereco" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivCarro"
        android:background="@drawable/carro"
        app:layout_constraintTop_toBottomOf="@+id/tvValor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/tvTempoCarro"
        android:text="12H"
        android:textColor="@color/cor_branca"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ivCarro"
        app:layout_constraintTop_toBottomOf="@+id/tvValor"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivOnibus"
        android:background="@drawable/onibus"
        app:layout_constraintLeft_toRightOf="@+id/tvTempoCarro"
        app:layout_constraintTop_toBottomOf="@+id/tvValor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/tvTempoOnibus"
        android:text="12H"
        android:textColor="@color/cor_branca"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ivOnibus"
        app:layout_constraintTop_toBottomOf="@+id/tvValor"/>

    <TextView
        android:id="@+id/tvDiaSemana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="127dp"
        android:text="SÃ¡bado as 13H"
        android:textColor="@color/cor_branca"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tvValor"
        app:layout_constraintTop_toBottomOf="@+id/tvEndereco" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:text="12/06"
        android:textColor="@color/cor_azul"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tvValor"
        app:layout_constraintTop_toBottomOf="@id/tvDiaSemana" />

    <TextView
        android:id="@+id/tvTituloDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detalhe_evento"
        android:textColor="@color/cor_branca"
        android:textSize="20sp"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvData" />

    <TextView
        android:id="@+id/tvDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea"
        android:textColor="@color/cor_branca"
        app:layout_constraintTop_toBottomOf="@id/tvTituloDetalhe" />

    <TextView
        android:id="@+id/tvCriacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Este evento foi criado em 01/03/2019"
        android:textColor="@color/cor_branca"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvDetalhe" />

    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Esporte | Futebol | Futsal"
        android:textColor="@color/cor_azul"
        app:layout_constraintTop_toBottomOf="@id/tvCriacao" />

    <Button
        android:id="@+id/btBora"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/cor_azul"
        android:text="BORA!"
        android:textAlignment="center"
        android:textColor="@color/cor_roxo"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/tvCategoria"
        app:layout_editor_absoluteX="120dp" />

    <TextView
        android:id="@+id/tvSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* seu saldo R$ 14,00"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/btBora"
        app:layout_editor_absoluteX="125dp" />

    <TextView
        android:id="@+id/tvParticipante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/participante"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvSaldo" />

</androidx.constraintlayout.widget.ConstraintLayout>