<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#320236"
    tools:context=".EditarUsuarioActivity">

    <ImageView
        android:id="@+id/logo"
        style="@style/Logo"
        android:src="@drawable/bora_branco" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo">

        <RelativeLayout style="@style/RelativeBody">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivFoto"
                style="@style/PhotoView"
                app:civ_border_color="@color/cor_azul"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/tvAlteraFoto"
                style="@style/TitleImage"
                android:layout_below="@+id/ivFoto"
                android:text="@string/altera_foto" />

            <TextView
                android:id="@+id/tvQualificacao"
                style="@style/TitleBodyText"
                android:layout_below="@+id/tvAlteraFoto"
                android:layout_marginTop="30dp"
                android:text="@string/qualificacao_usuario" />

            <ImageView
                android:id="@+id/ivEstrelaUm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAlteraFoto"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tvQualificacao"
                android:background="@drawable/ic_star_yellow" />

            <ImageView
                android:id="@+id/ivEstrelaDois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAlteraFoto"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/ivEstrelaUm"
                android:background="@drawable/ic_star_yellow" />

            <ImageView
                android:id="@+id/ivEstrelaTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAlteraFoto"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/ivEstrelaDois"
                android:background="@drawable/ic_star_yellow" />

            <ImageView
                android:id="@+id/ivEstrelaQuatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAlteraFoto"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/ivEstrelaTres"
                android:background="@drawable/ic_star_yellow" />

            <ImageView
                android:id="@+id/ivEstrelaCinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAlteraFoto"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/ivEstrelaQuatro"
                android:background="@drawable/ic_star_black" />

            <TextView
                android:id="@+id/tvTituloUsuario"
                style="@style/TitleBodyText"
                android:layout_below="@+id/tvQualificacao"
                android:layout_marginTop="30dp"
                android:text="@string/nome_usuario" />

            <TextView
                android:id="@+id/tvUsuario"
                style="@style/TextBodyText"
                android:layout_below="@+id/tvQualificacao"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/tvTituloUsuario" />

            <TextView
                android:id="@+id/tvLabelCelular"
                style="@style/FormLabel"
                android:layout_below="@id/tvUsuario"
                android:text="@string/celular" />

            <EditText
                android:id="@+id/etCelular"
                style="@style/FormEditText"
                android:layout_below="@+id/tvLabelCelular"
                android:background="@color/cor_branco"
                android:hint="@string/celular"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvLabelEmail"
                style="@style/FormLabel"
                android:layout_below="@id/etCelular"
                android:text="@string/email" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/FormEditText"
                android:layout_below="@+id/tvLabelEmail"
                android:hint="@string/email"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvLabelSenha"
                style="@style/FormLabel"
                android:layout_below="@id/etEmail"
                android:text="@string/senha" />

            <EditText
                android:id="@+id/etSenha"
                style="@style/FormEditText"
                android:layout_below="@+id/tvLabelSenha"
                android:hint="@string/senha"
                android:inputType="text" />

            <Button
                android:id="@+id/btAlterar"
                style="@style/Button"
                android:layout_below="@id/etSenha"
                android:layout_marginTop="20dp"
                android:background="@color/cor_azul"
                android:onClick="alterarCadastro"
                android:text="@string/alterar" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
