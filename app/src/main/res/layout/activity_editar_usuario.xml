<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarUsuarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout style="@style/RelativeBody">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/upload_pic"
                style="@style/PhotoView"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/tvAlteraFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_pic"
                android:layout_centerHorizontal="true"
                android:text="@string/altera_foto" />

            <TextView
                android:id="@+id/label_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAlteraFoto"
                android:text="@string/nome_usuario" />

            <TextView
                android:id="@+id/label_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_username"
                android:text="@string/celular" />

            <EditText
                android:id="@+id/phone_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_phone"
                android:hint="@string/celular"
                android:inputType="phone" />

            <TextView
                android:id="@+id/label_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_user"
                android:text="@string/email" />

            <EditText
                android:id="@+id/mail_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_mail"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />


            <Button
                android:id="@+id/btAlterar"
                style="@style/Button"
                android:layout_below="@id/mail_user"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:onClick="alterarCadastro"
                android:text="@string/alterar" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
