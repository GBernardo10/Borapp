<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".DetailsEventoActivity">

    <RelativeLayout style="@style/RelativeBody">
        <ImageView
            android:id="@+id/photo_event"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_logo"
            tools:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/title_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Futebas do Bolivia" />

        <TextView
            android:id="@+id/label_owner_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_event"
            android:layout_alignStart="@id/title_event"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="@string/organizador" />

        <TextView
            android:id="@+id/owner_event"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_event"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/label_owner_event"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:text="Boliva123" />

        <RatingBar
            android:id="@+id/rating_event"
            style="?attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/owner_event"
            android:layout_alignStart="@id/label_owner_event"
            android:elevation="10dp"
            android:numStars="5"
            android:progressBackgroundTint="@color/ic_launcher_background"
            android:progressTint="#FFCA28"
            android:stepSize="0.5"
            tools:rating="3" />

        <TextView
            android:id="@+id/address_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_event"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Rua Elite dos bravos, 53 - Vila Invernada - SP" />


        <TextView
            android:id="@+id/price_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_event"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="R$ 20,00"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/day_of_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_event"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="SÃ¡bado as 13H" />

        <TextView
            android:id="@+id/date_event_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_of_week"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="12/06" />

        <TextView
            android:id="@+id/label_details_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_event_start"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@string/detalhe_evento" />

        <TextView
            android:id="@+id/description_event"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/label_details_event"
            android:maxLines="20"
            android:textAlignment="textStart"
            tools:text="ipsum dolor sit amet, consectetur
                adipiscing elit, sed do eiusmod tempor.
                incididunt ut labore et dolore magna aliqua.
                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea" />

        <TextView
            android:id="@+id/created_at_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_event"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:text="Este evento foi criado em 01/03/2019" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_category_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/created_at_event"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_category_event" />

        <Button
            android:id="@+id/btn_bora"
            style="@style/Button"
            android:layout_width="150dp"
            android:layout_below="@id/rc_category_event"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/bora_detalhar" />

        <TextView
            android:id="@+id/balance_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_bora"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:text="* seu saldo R$ 14,00" />

        <TextView
            android:id="@+id/guest_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_wallet"
            android:layout_marginTop="20dp"
            android:text="@string/participante"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_list_guest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/guest_event"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_guest_event" />
    </RelativeLayout>
</ScrollView>
