<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RelativeBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalvarNovaSenha">

    <TextView
        android:id="@+id/label_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nova_senha" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_new_password"
        android:autofillHints=""
        android:hint="@string/nova_senha"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/label_confirm_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_password"
        android:text="@string/confirm_new_password" />

    <EditText
        android:id="@+id/confirmNewpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_confirm_new_password"
        android:autofillHints=""
        android:hint="@string/confirm_new_password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/Button"
        android:layout_below="@id/confirmNewpass"
        android:text="@string/salvar_senha" />
</RelativeLayout>