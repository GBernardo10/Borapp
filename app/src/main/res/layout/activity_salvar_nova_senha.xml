<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#320236"
    tools:context=".SalvarNovaSenha">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/botaoVoltar"
        android:src="@drawable/button_previous_page"
        >
    </ImageView>


    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/logo"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo"
            android:contentDescription="@string/icone_logo">
        </ImageView>

        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_above="@id/login"
            android:layout_marginBottom="10dp"
            android:text="@string/nova_senha"
            android:id="@+id/label_login"
            >
        </TextView>

        <EditText
            android:id="@+id/login"
            android:labelFor="@id/label_login"
            android:hint="@string/nova_senha"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:layout_height="55dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_centerVertical="true"
            android:background="@color/c_white"
            android:autofillHints=""
            android:inputType="text">
        </EditText>


        <TextView
            android:id="@+id/label_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/confirmNewpass"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginBottom="-40dp"
            android:text="@string/confirmar_nova_senha"
            android:textColor="#fff">

        </TextView>

        <EditText
            android:id="@+id/confirmNewpass"
            android:hint="@string/confirmar_nova_senha"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:paddingStart="20dp"
            android:labelFor="@id/label_pass"
            android:paddingEnd="20dp"
            android:inputType="text"
            android:layout_below="@id/login"
            android:background="#fff"
            android:autofillHints="">
        </EditText>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/salvar_senha"
            android:textSize="20sp"
            android:background="#00BEFF"
            android:layout_below="@id/confirmNewpass"
            android:layout_marginTop="20dp"
            >
        </Button>

    </RelativeLayout>
</RelativeLayout>