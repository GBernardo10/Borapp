<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".CadastroPjActivity">


    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Bora"
        android:textAlignment="center"
        android:textColor="@color/cor_branca"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imgUsuario"
        android:background="@drawable/user"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo"
        android:layout_marginTop="20dp"
        app:layout_editor_absoluteX="160dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inserir_foto_perfil"
        app:layout_constraintTop_toBottomOf="@+id/imgUsuario"
        android:textSize="28dp"
        android:textColor="@color/cor_branca"
        app:layout_editor_absoluteX="60dp"
        android:id="@+id/tvFoto"
        />

    <EditText
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:hint="@string/email_ou_login"
        android:background="@color/cor_branca"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFoto"
        android:layout_marginTop="40dp"
        app:layout_editor_absoluteX="10dp"
        android:id="@+id/etEmail"

        />

    <EditText
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:hint="@string/seu_whatsapp"
        android:background="@color/cor_branca"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:layout_marginTop="10dp"
        app:layout_editor_absoluteX="10dp"
        android:id="@+id/etWhats"
        />

    <EditText
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:hint="@string/CNPJ"
        android:background="@color/cor_branca"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/etWhats"
        android:layout_marginTop="10dp"
        app:layout_editor_absoluteX="10dp"
        android:id="@+id/etCnpj"
        />

    <EditText
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:hint="@string/nome_da_empresa"
        android:background="@color/cor_branca"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/etCnpj"
        android:layout_marginTop="10dp"
        app:layout_editor_absoluteX="10dp"
        android:id="@+id/etLogin"
        />

    <Button
        android:layout_width="380dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/etLogin"
        android:textAlignment="center"
        app:layout_editor_absoluteX="10dp"
        android:text="@string/cadastrar"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"/>


</androidx.constraintlayout.widget.ConstraintLayout>