<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#320236"
    tools:context=".MeusRolesActivity">

    <ImageView
        android:id="@+id/logo"
        style="@style/Logo"
        android:src="@drawable/bora_branco" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo">

        <RelativeLayout
            android:id="@+id/meusRoles"
            style="@style/RelativeBody">

            <EditText
                android:id="@+id/searchEventos"
                android:layout_width="390dp"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_bar"
                android:drawableLeft="@drawable/ic_search"
                android:drawableTint="#534848"
                android:hint="@string/naoEncontrou"
                android:inputType="text"
                android:labelFor="@id/label_login"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#000"></EditText>

            <TextView
                android:id="@+id/labelRoles"
                style="@style/TitleActivity"
                android:layout_below="@id/searchEventos"
                android:text="@string/roles"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <CheckBox
                android:id="@+id/labelMeusRolesCriados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelRoles"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorAccent"
                android:text="@string/rolesCriados"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <Button
                android:id="@+id/evento"
                android:layout_width="390dp"
                android:layout_height="90dp"
                android:layout_below="@id/labelMeusRolesCriados"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_evento"
                android:onClick="irAlterarEventos"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/labelMeusRolesCriados"
                android:layout_marginStart="300dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ball"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/diaEvento"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/labelMeusRolesCriados"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Sábado ás 13h"
                android:textColor="#2C1551"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="@dimen/cardview_default_radius" />

            <TextView
                android:id="@+id/dataEvento"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/labelMeusRolesCriados"
                android:layout_marginStart="320dp"
                android:layout_marginTop="10dp"
                android:text="12/06"
                android:textColor="#EF280E"
                android:textSize="25dp"
                android:textStyle="bold"
                android:translationZ="@dimen/cardview_default_radius" />

            <TextView
                android:id="@+id/nomeEvento"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/labelMeusRolesCriados"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Fute do Bolivinha"
                android:textColor="#EF280E"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="@dimen/cardview_default_radius" />

            <ImageView
                android:id="@+id/car"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/nomeEvento"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/car"
                android:translationZ="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEvento"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/car"
                android:text="1h"
                android:textColor="#757171"
                android:textSize="20dp"
                android:translationZ="2dp" />


            <ImageView
                android:id="@+id/bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEvento"
                android:layout_marginStart="30dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/car"
                android:src="@drawable/bus"
                android:translationZ="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEvento"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/bus"
                android:text="2h"
                android:textColor="#757171"
                android:textSize="20dp"
                android:translationZ="2dp" />

            <ImageView
                android:id="@+id/localizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEvento"
                android:layout_marginStart="170dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/bus"
                android:src="@drawable/location"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEvento"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/localizacao"
                android:text="São Paulo,"
                android:textColor="#000"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cidade"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@id/localizacao"
                android:text="Vila invernada"
                android:textColor="#000"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_below="@id/evento"
                android:layout_marginStart="315dp"
                android:layout_marginTop="-4dp"
                android:background="@drawable/btn_default"
                android:src="@drawable/edit"
                android:translationZ="-2dp" />

            <ImageButton
                android:id="@+id/btnVisualizar"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_below="@id/evento"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@id/btnEditar"
                android:background="@drawable/btn_default"
                android:src="@drawable/eye"
                android:translationZ="-2dp" />


            <CheckBox
                android:id="@+id/labelMeusRolesParticipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/evento"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorAccent"
                android:text="@string/rolesParticipo"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <Button
                android:id="@+id/eventoParticipo"
                android:layout_width="390dp"
                android:layout_height="90dp"
                android:layout_below="@id/labelMeusRolesParticipo"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_evento"
                android:onClick="irVisualizarEventos"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/labelMeusRolesParticipo"
                android:layout_marginStart="300dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ball"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/diaEventoParticipo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/labelMeusRolesParticipo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Sábado ás 13h"
                android:textColor="#2C1551"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="@dimen/cardview_default_radius" />

            <TextView
                android:id="@+id/dataEventoParticipo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/labelMeusRolesParticipo"
                android:layout_marginStart="320dp"
                android:layout_marginTop="10dp"
                android:text="12/06"
                android:textColor="#EF280E"
                android:textSize="25dp"
                android:textStyle="bold"
                android:translationZ="@dimen/cardview_default_radius" />

            <TextView
                android:id="@+id/nomeEventoParticipo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/labelMeusRolesParticipo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Fute do Chileno"
                android:textColor="#EF280E"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="@dimen/cardview_default_radius" />

            <ImageView
                android:id="@+id/carParticipo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/nomeEventoParticipo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/car"
                android:translationZ="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEventoParticipo"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/carParticipo"
                android:text="1h"
                android:textColor="#757171"
                android:textSize="20dp"
                android:translationZ="2dp" />


            <ImageView
                android:id="@+id/busParticipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEventoParticipo"
                android:layout_marginStart="30dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/carParticipo"
                android:src="@drawable/bus"
                android:translationZ="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEventoParticipo"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/busParticipo"
                android:text="2h"
                android:textColor="#757171"
                android:textSize="20dp"
                android:translationZ="2dp" />

            <ImageView
                android:id="@+id/localizacaoParticipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEventoParticipo"
                android:layout_marginStart="170dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/busParticipo"
                android:src="@drawable/location"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/cidadeParticipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeEventoParticipo"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/localizacaoParticipo"
                android:text="São Paulo,"
                android:textColor="#000"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/localParticipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cidadeParticipo"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@id/localizacao"
                android:text="Vila invernada"
                android:textColor="#000"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <ImageButton
                android:id="@+id/btnVisualizarParticipo"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_below="@id/eventoParticipo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@id/btnEditar"
                android:background="@drawable/btn_default"
                android:src="@drawable/eye"
                android:translationZ="-2dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>